<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary"       >@color/colorPrimary</item>
        <item name="colorPrimaryDark"   >@color/colorPrimaryDark</item>
        <item name="colorAccent"        >@color/colorAccent</item>
    </style>
    
    <style name="SeaTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark"           >@color/cyan</item>
        <item name="colorPrimary"               >@color/bright_cyan</item>
        <item name="android:navigationBarColor" >@color/cyan</item>
        <item name="colorAccent"                >@color/dark_blue</item>
    </style>

    <style name="SalatTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary"              >@color/bright_green</item>
        <item name="colorPrimaryDark"          >@color/green</item>
        <item name="colorAccent"               >@color/deep_blue</item>
        <item name="android:navigationBarColor">@color/green</item>
    </style>

    <style name="OrangeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary"              >@color/bright_orange</item>
        <item name="colorPrimaryDark"          >@color/orange</item>
        <item name="colorAccent"               >@color/blue_gray</item>
        <item name="android:navigationBarColor">@color/orange</item>
    </style>

    <style name="edit_text_dialog_style">
        <item name="android:layout_marginTop"   >16dp</item>
        <item name="android:layout_marginLeft"  >8dp</item>
        <item name="android:layout_marginRight" >8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:inputType"          >text</item>
    </style>
</resources>
